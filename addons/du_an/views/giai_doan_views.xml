<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_giai_doan_tree" model="ir.ui.view">
        <field name="name">giai.doan.tree</field>
        <field name="model">giai.doan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="du_an_id"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_giai_doan_form" model="ir.ui.view">
        <field name="name">giai.doan.form</field>
        <field name="model">giai.doan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="du_an_id"/>
                        <field name="ngay_bat_dau"/>
                        <field name="ngay_ket_thuc"/>
                    </group>
                    <notebook>
                        <page string="Công việc">
                            <field name="cong_viec_ids" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                    <field name="nguoi_phu_trach"/>
                                    <field name="trang_thai"/>
                                </tree>
                                <form>
                                    <field name="name"/>
                                    <field name="mo_ta"/>
                                    <field name="nguoi_phu_trach"/>
                                    <field name="trang_thai"/>
                                </form>
                            </field>
                        </page>
                        <page string="Chi phí">
                            <field name="chi_phi_ids" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                    <field name="so_tien"/>
                                    <field name="ngay_chi"/>
                                </tree>
                                <form>
                                    <field name="name"/>
                                    <field name="so_tien"/>
                                    <field name="ngay_chi"/>
                                    <field name="mo_ta"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
     <record id="action_giai_doan_list" model="ir.actions.act_window">
        <field name="name">Danh sách giai đoạn</field>
        <field name="res_model">giai.doan</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ca_hoc_form" model="ir.ui.view">
            <field name="name">ca_hoc</field>
            <field name="model">ca_hoc</field>
            <field name="arch" type="xml">
                <form string="Ca hoc">
                    <sheet>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '=', False)], }">
                            Chỉnh sửa Ca học
                        </div>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '!=', False)], }">
                            Tạo mới Ca học
                        </div>
                        <div class="oe_read_only" style="font-size:25px">Ca học</div>
                        <group col="2" string="Thông tin chung">
                            <field name="id_ca_hoc" required="1"/>
                            <field name="start_time" required="1"/>
                            <field name="end_time" required="1"/>
                            <field name="student_class_id" required="1"/>
                            <field name="student_list" required="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="alowwed_app_list" required="1"/>
                            <field name="status" required="1"/>
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ca_hoc_tree" model="ir.ui.view">
            <field name="name">ca_hoc</field>
            <field name="model">ca_hoc</field>
            <field name="arch" type="xml">
                <tree string="Ca hoc">
                    <field name="id_ca_hoc"/>
                    <field name="date"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="student_class_id"/>
                    <field name="student_list"/>
                    <field name="alowwed_app_list"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ca_hoc_search">
            <field name="model">ca_hoc</field>
            <field name="arch" type="xml">
                <search>
                    <field name="id_ca_hoc"/>
                </search>  
            </field>
        </record>

        <record id="action_ca_hoc" model="ir.actions.act_window">
            <field name="name">Ca học</field>
            <field name="res_model">ca_hoc</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "ca_hoc_search"/>
        </record>
        
    </data>
</odoo>